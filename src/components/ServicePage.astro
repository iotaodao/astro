---
import Header from '../Header.astro';
import Footer from '../Footer.astro';
import { getPricingPlans } from '../../lib/wp';

const { service } = Astro.props;

// Получаем тарифы (можно добавить фильтрацию, если нужно)
const pricingPlans = await getPricingPlans();
---

<Header />

<main>
  {/* --- Hero Section --- */}
  <section class="relative h-[60vh] min-h-[500px] w-full overflow-hidden flex items-end pb-16">
    <div class="absolute inset-0 z-0">
        <img 
            src={service.image} 
            alt={service.title} 
            class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-[#1a4031]/90 via-[#1a4031]/40 to-transparent"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <h1 class="text-5xl md:text-7xl font-serif text-white font-light mb-6">
            {service.title}
        </h1>
        <div class="h-1 w-24 bg-[#88a858] rounded-full"></div>
    </div>
  </section>

  {/* --- Описание --- */}
  <section class="py-20 md:py-24 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            {service.description && (
                <p class="text-xl md:text-2xl text-[#1a4031] font-serif mb-12 leading-relaxed border-l-4 border-[#88a858] pl-6">
                    {service.description}
                </p>
            )}

            <div class="prose prose-lg prose-stone max-w-none text-stone-600">
                <Fragment set:html={service.content} />
            </div>
        </div>
    </div>
  </section>

  {/* --- Тарифы --- */}
  <section class="py-20 md:py-24 bg-[#f9f8f6]">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <span class="text-[#88a858] uppercase tracking-widest text-sm font-medium mb-2 block">Стоимость</span>
            <h2 class="text-4xl md:text-5xl font-serif text-[#1a4031]">Тарифные планы</h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {pricingPlans.slice(0, 3).map((plan: any) => (
                <div class="bg-white rounded-3xl p-8 border border-stone-100 hover:shadow-xl transition-all duration-300 group flex flex-col relative overflow-hidden">
                    <div class="absolute top-0 left-0 right-0 h-2 bg-[#1a4031] group-hover:bg-[#88a858] transition-colors"></div>
                    <h3 class="text-2xl font-serif text-[#1a4031] mb-2">{plan.name}</h3>
                    <div class="text-3xl font-bold text-[#88a858] mb-6">{plan.price}</div>
                    <p class="text-stone-500 mb-8 text-sm">{plan.description}</p>
                    <a href="/contact" class="mt-auto w-full py-4 rounded-xl border border-[#1a4031]/20 text-[#1a4031] font-medium text-center hover:bg-[#1a4031] hover:text-white transition-all">
                        Заказать
                    </a>
                </div>
            ))}
        </div>
    </div>
  </section>
</main>

<Footer />
