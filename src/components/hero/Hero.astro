---
import HeroContent from './HeroContent';
---

<section class="relative h-screen w-full overflow-hidden flex items-center justify-center">
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
  >
    <source src="/video/hero.mp4" type="video/mp4" />
  </video>

  <div class="absolute inset-0 bg-gradient-to-b from-primary/30 via-primary/60 to-primary/90 z-0"></div>

  <HeroContent client:load />
</section>
