---
import Layout from '../layouts/Layout.astro';
import PricingTable from '../components/pricing/PricingTable';
import Footer from '../components/Footer.astro';
import { getPricingPlans } from '../lib/wp';

const plans = await getPricingPlans();
---

<Layout title="Цены | PlantUP.">
  <div class="pt-32 pb-20 container mx-auto px-4 min-h-screen">
    <h1 class="text-5xl font-serif text-primary mb-12 text-center">Стоимость работ</h1>
    <PricingTable client:load plans={plans} />
  </div>
  <Footer />
</Layout>
